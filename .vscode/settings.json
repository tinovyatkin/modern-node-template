{
  "editor.rulers": [80],
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // prevent watch task failures on lint errors
  "eslint.validate": ["javascript"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // switch off default VSCode formatting rules
  "javascript.format.enable": false,
  "yaml.format.enable": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dotenv]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/coverage": true
  },
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "js/ts.implicitProjectConfig.checkJs": true,
  // for Windows collaborators
  "files.eol": "\n",
  "files.encoding": "utf8",
  // associations for some files this project is using
  "files.associations": {
    ".huskyrc": "jsonc",
    ".npmrc": "ini",
    ".env": "dotenv"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "files.exclude": {
    ".cache": true,
    "**/.git": true,
    "**/.gtm": true,
    "**/.DS_Store": true,
    "node_modules": true,
    ".eslintcache": true
  },
  "npm.autoDetect": "on",
  "npm.packageManager": "npm",
  "npm.fetchOnlinePackageInfo": true,
  "json.schemas": [
    // Husky config file
    {
      "fileMatch": [".huskyrc"],
      "url": "http://json.schemastore.org/huskyrc"
    },
    // Prettier config
    {
      "fileMatch": [".prettierrc.json"],
      "url": "http://json.schemastore.org/prettierrc"
    },
    {
      "fileMatch": ["schemas/**.json"],
      "url": "http://json-schema.org/draft-04/schema"
    }
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "cSpell.enabled": true,
  "mochaExplorer.files": "test/**/*.test.js",
  "mochaExplorer.timeout": 999999,
  "mochaExplorer.exit": true
}
